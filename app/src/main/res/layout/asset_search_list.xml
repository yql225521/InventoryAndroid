<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:background="@color/white"
	android:layout_width="wrap_content" android:layout_height="fill_parent">
	<ListView android:id="@+id/android:list" android:layout_width="fill_parent" android:fastScrollEnabled="true" 
		android:layout_height="wrap_content" />
	<TextView
		android:id="@+id/asset_search_list_no_data"
		style="@style/list_search_no_data_text"
	/>
	<LinearLayout
		android:id="@+id/asset_search_list_progress_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_centerInParent="true"
		android:gravity="center">
		<ProgressBar 
			android:layout_height="20dp" 
			android:layout_width="20dp"
			style="?android:attr/progressBarStyleInverse"/>
		<TextView 
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/black"	
			android:textSize="12sp" 
			android:text="@string/status_loading_more" 	
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>
	</LinearLayout>
</RelativeLayout>
